#!/bin/sh

cp .tmux.conf ~
cp .inputrc ~
cp .zshrc ~
cp -r .config ~

mkdir ~/.local

# neovim
curl --silent --location https://github.com/neovim/neovim/releases/download/v0.9.5/nvim-linux64.tar.gz \
  | tar --extract --gzip --strip-components 1 --directory ~/.local --file -
## coc.nvim and copilot.vim require nodejs
curl --silent --location https://nodejs.org/download/release/v18.19.1/node-v18.19.1-linux-x64.tar.xz \
  | tar --extract --xz --strip-components 1 --directory ~/.local --file -

# zsh
sudo chown -R $(id -un) /usr/local/share/zsh # defaults to owned by UNKOWN:ssh which causes annoying compaudit messages
sudo chsh "$(id -un)" --shell "/usr/bin/zsh"
export ZPLUG_HOME=$HOME/.local/share/zsh/zplug # also in .zshrc
git clone --depth 1 --branch 2.4.2 https://github.com/zplug/zplug $ZPLUG_HOME
